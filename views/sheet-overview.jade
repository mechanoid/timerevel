section.segment
  header
    h3 Overview
    
  table.ui.table.sheet-overview
    thead
      tr
        th
        th hours
        th %
    tbody
      tr(data-ng-repeat="project in projects")
        td {{project.name}}
        td {{project | workingHoursForProject: sheetEntries}}
        td
      tr.summary-row
        td overall
        td {{hoursSum}}
        td  
      tr
        td(colspan="3")
      tr.summary-row
        td overtime
        td {{overtimeSum | asOvertime}}
        td
      tr.summary-row
        td time and material
        td {{timeAndMaterial}}
        td
    
